class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& nums) {
        int n = nums.size();
        vector<int> dp;
        vector<int> ans(n, 0);
        for(int i = 0; i < n; ++i){
            int x = upper_bound(dp.begin(), dp.end(), nums[i]) - dp.begin();
            if(x == dp.size()){
                dp.push_back(nums[i]);
            }else{
                dp[x] = nums[i];
            }
            ans[i] = x + 1; 
        }
        return ans;
    }
};