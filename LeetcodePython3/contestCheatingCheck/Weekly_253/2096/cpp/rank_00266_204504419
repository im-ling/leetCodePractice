class Solution {
public:
    int b[100010];
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
        vector <int> res;
        int n = a.size(), len = 0;
        for(int i = 0; i < n; i++) {
            int pos = upper_bound(b + 1, b + 1 + len, a[i]) - b;
            len = max(len, pos);
            b[pos] = a[i];
            res.push_back(pos);
        }
        return res;
    }
};