class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& o) {
        vector<int> lis, ans;
        
        for(int i=0; i<o.size(); i++) {
            auto in = upper_bound(lis.begin(), lis.end(), o[i])-lis.begin();
            if(in == lis.size())
                lis.push_back(o[i]);
            else
                lis[in] = o[i];
            ans.push_back(in+1);
        }
        return ans;
    }
};