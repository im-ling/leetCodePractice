class Solution {
 public:
  vector<int> longestObstacleCourseAtEachPosition(vector<int> &obstacles) {
    int n = obstacles.size();
    vector<int> ans(n, 0), a;
    a.reserve(n);
    for (int i = 0; i < n; ++i) {
      int h = obstacles[i];
      if (a.empty() || a.back() <= h) {
        a.push_back(h);
        ans[i] = a.size();
        continue;
      }
      int ub = upper_bound(a.begin(), a.end(), h) - a.begin();
      a[ub] = h;
      ans[i] = ub + 1;
    }
    return ans;
  }
};