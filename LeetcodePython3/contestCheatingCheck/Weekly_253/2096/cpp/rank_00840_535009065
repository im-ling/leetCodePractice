class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
        vector<int>v{0},ans(a.size());
        for(int i=0;i<a.size();i++){
            if(a[i]>=v.back()){
                v.push_back(a[i]);
                ans[i]=v.size()-1;
            }
            else{
                int pos = upper_bound(v.begin(),v.end(),a[i])-v.begin();
                ans[i]=pos;
                v[pos]=a[i];
            }
        }
        return ans;
    }
};