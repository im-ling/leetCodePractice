class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        vector<int> buf;
        vector<int> res;
        for (int x : obstacles) {
            int i;
            for (i = buf.size() - 1; i >= 0 && buf[i] > x; i--);
            i++;
            if (i == buf.size())    buf.push_back(x); 
            else buf[i] = x;
            res.push_back(i + 1);
        }
        return res;
    }
};