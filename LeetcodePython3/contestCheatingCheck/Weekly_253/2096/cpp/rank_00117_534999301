class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        int n = obstacles.size();
        int arr[n + 1], id = 0; 
        arr[0] = 0;
        vector<int> ans;
        for (auto x : obstacles) {
            int i = upper_bound(arr + 1, arr + id + 1, x) - arr;
            ans.push_back(i);
            if (i == id + 1) arr[++id] = x;
            else arr[i] = x;
        }
        return ans;
    }
};