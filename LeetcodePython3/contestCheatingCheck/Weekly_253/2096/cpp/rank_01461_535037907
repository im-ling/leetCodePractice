class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        vector<int>chain;
        
        vector<int>ans(obstacles.size());
        
        for(int i = 0;i<obstacles.size();i++){
            int curr = obstacles[i];
            
            int pos = upper_bound(chain.begin(), chain.end(), curr) - chain.begin();
            
            if(pos==chain.size()){
                chain.push_back(curr);
                ans[i] = chain.size();
            }
            else{
                chain[pos] = curr;
                ans[i] = pos + 1;
            }
        }
        
        return ans;
    }
};