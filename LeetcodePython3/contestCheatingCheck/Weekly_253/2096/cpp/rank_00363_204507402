class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        int n = obstacles.size();
        vector<int> g(n+1,INT_MAX);
        g[0] = INT_MIN;
        vector<int> ans;
        for(int i=0;i<n;i++){
            int x = upper_bound(g.begin(),g.end(),obstacles[i])-g.begin();
            g[x] = obstacles[i];
            ans.push_back(x);
        }
        return ans;
    }
};