class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        vector<int> st;
        int n = obstacles.size();
        vector<int> ans(n, 1);
        for (int i = 0; i < n; ++i) {
            int idx = upper_bound(st.begin(), st.end(), obstacles[i]) - st.begin();
            ans[i] = idx + 1;
            if (idx == st.size()) st.push_back(obstacles[i]);
            else st[idx] = obstacles[i];
        }
        return ans;
    }
};