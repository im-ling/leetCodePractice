class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& o) {
        int n = o.size();
        vector<int> ans(n,0);
        vector<int> d(n+1, INT_MAX);
        d[0] = INT_MIN;
        for(int i=0;i<n;i++){
            int j=upper_bound(d.begin(),d.end(),o[i]) - d.begin();
            ans[i]=j;
            if(d[j-1]<d[j] && d[j]>o[i])
                d[j] = o[i];
        }
        return ans;
    }
};