class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& arr) {
        vector<int>dp(arr.size(),1e9);
        vector<int>ans;
        for(int i=0;i<arr.size();i++){
            int idx=upper_bound(dp.begin(),dp.end(),arr[i])-dp.begin();
            dp[idx]=arr[i];
            ans.push_back(idx+1);
        }
        return ans;
    }
};