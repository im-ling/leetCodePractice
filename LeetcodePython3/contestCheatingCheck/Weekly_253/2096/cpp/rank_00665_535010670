class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
        int n = a.size();
        vector<int> res(n, 1);
        int inf = 1e9 + 10;
        vector<int> dp(n + 10, inf);
        
        for (int i = 0 ;i < n; ++i) {
            auto x = upper_bound(dp.begin(), dp.begin() + i, a[i]) ;
            *x =a[i];
            res[i] =x - dp.begin() + 1;
        }
        
        
        return res;
    }
};