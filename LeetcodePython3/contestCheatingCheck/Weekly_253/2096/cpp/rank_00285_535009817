class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        int n = obstacles.size();
        vector<int> minoflen = {INT_MIN};
        vector<int> ans(n);
        for(int i=0;i<n;i++) {
            /*
            for(int temp: minoflen) cout << temp << " ";
            cout << endl;
            */
            int len = upper_bound(minoflen.begin(), minoflen.end(), obstacles[i]) - minoflen.begin();
            ans[i] = len;
            if(len==minoflen.size()) {
                minoflen.push_back(obstacles[i]);
            } else {
                minoflen[len] = obstacles[i];
            }
        }
        return ans;
    }
};