class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        int n=obstacles.size();
        vector<int> ans(n),v;
        for(int i=0; i<n; i++) {
        auto it = upper_bound(v.begin(), v.end(), obstacles[i]);
            ans[i]=it-v.begin()+1;
        if(it==v.end()) v.push_back(obstacles[i]);
        else *it = obstacles[i];
    }
        return ans;
    }
};