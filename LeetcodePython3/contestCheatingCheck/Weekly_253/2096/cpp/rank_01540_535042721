class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
            int n = a.size();
    vector<int> d(n+1, INT_MAX);
    d[0] = INT_MIN;
    vector<int>ans(n,0);
    for (int i = 0; i < n; i++) {
        int j = upper_bound(d.begin(), d.end(), a[i]) - d.begin();
        if (d[j-1] <= a[i] && a[i] < d[j]){
            d[j] = a[i];
            ans[i]=j;
        }
    }
    return ans;
    }
};