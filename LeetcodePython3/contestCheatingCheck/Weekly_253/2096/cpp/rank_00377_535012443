class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        std::vector<int> tbl{{0}};
        std::vector<int> result;
        for (const int val : obstacles) {
            auto it = std::upper_bound(tbl.begin(), tbl.end(), val);
            if (it == tbl.end()) {
                result.push_back(tbl.size());                
                tbl.push_back(val);
            } else {
                *it = val;
                result.push_back(std::distance(tbl.begin(), it));
            }
        }
        return result;
    }
};