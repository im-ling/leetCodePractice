class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        vector<int> arr;
        vector<int> ans;
        for (int i: obstacles) {
            auto it = upper_bound(arr.begin(), arr.end(), i);
            if (it == arr.end()) {
                arr.push_back(i);
                ans.push_back(arr.size());
            } else {
                *it = i;
                ans.push_back(it - arr.begin() + 1);
            }
        }
        return ans;
    }
};