class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& nums){
        int n=nums.size();
        vector<int> dp(n+1, INT_MAX);
        dp[0]=INT_MIN;
        vector<int> ans;
        for(int i=0; i<n; i++){
            int len=upper_bound(dp.begin(), dp.end(), nums[i])-dp.begin();
            
            if(dp[len-1]<=nums[i] and dp[len]>=nums[i])
                dp[len]=nums[i];
            ans.push_back(len);
        }
        return ans;
    }
};