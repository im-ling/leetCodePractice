class Solution {
public:
vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
    int n = a.size();
    vector<int> ans(n);
    vector<int> lis(n, 1e9);
    for (int i = 0; i < n; i++) {
        int x = (upper_bound(lis.begin(), lis.end(), a[i]) - lis.begin());
        ans[i] = 1 + x;
        lis[x] = a[i];
    }
    return ans;
}
};