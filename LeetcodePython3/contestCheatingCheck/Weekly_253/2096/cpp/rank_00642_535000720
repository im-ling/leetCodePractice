class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
        vector<int> res, b;
        int i, j, n = a.size();
        for (i = 0; i < n; ++i){
            j = lower_bound(b.begin(), b.end(), a[i] + 1) - b.begin();
            if (j >= b.size()) b.push_back(a[i]);
            else b[j] = a[i];
            res.push_back(j + 1);
        }
        
        return res;
    }
};