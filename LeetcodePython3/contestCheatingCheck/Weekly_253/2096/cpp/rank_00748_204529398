class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        int n=obstacles.size();
        vector<int> incress;
        vector<int> ans(n);
        for(int i=0;i<n;i++){
            if(incress.empty()||incress.back()<=obstacles[i]){
                incress.push_back(obstacles[i]);
                ans[i]=incress.size();
            }else{
                int temp=upper_bound(incress.begin(),incress.end(),obstacles[i])-incress.begin();
                incress[temp]=obstacles[i];
                ans[i]=temp+1;
            } 
        }
        
        return ans;
    }
};