class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
        int n = a.size();
        vector<int> dp(n, INT_MAX), ans;
        for(int i = 0; i < a.size(); ++i){
            int t = upper_bound(dp.begin(), dp.end(), a[i]) - dp.begin();
            dp[t] = a[i];
            ans.push_back(t+1);
        }
        return ans;
    }
};
//