class Solution {
public:   
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& A) {
        int n = A.size();
        vector<int> ret(n), B;
        
        for(auto int i = 0; i < n; ++i) {
            auto q = upper_bound(B.begin(), B.end(), A[i]) - B.begin();
            ret[i] = q + 1;
            if(q == B.size()) B.push_back(A[i]);
            else B[q] = A[i];
        }
        
        return ret;
    }
};