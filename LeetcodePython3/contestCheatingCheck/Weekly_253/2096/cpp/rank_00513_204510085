class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& a) {
        int n=a.size();
        vector<int> v,ans;
        for(int i=0;i<n;i++){
            int p=upper_bound(v.begin(),v.end(),a[i])-v.begin();
            if(p<v.size())v[p]=a[i];
            else v.push_back(a[i]);
            ans.push_back(p+1);
        }
        return ans;
    }
};