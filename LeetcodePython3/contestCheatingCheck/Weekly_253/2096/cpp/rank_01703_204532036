class Solution {
public:
    vector<int> longestObstacleCourseAtEachPosition(vector<int>& obstacles) {
        int dp[100002];
        for(int i=0;i<100002;++i)dp[i]=1e9;
        int n=obstacles.size();
        vector<int >res;
        for(int i=0;i<n;++i){
            int pos=upper_bound(dp,dp+100002,obstacles[i])-dp;
            dp[pos]=obstacles[i];
            res.push_back(pos+1);
        }
        return res;
    }
};