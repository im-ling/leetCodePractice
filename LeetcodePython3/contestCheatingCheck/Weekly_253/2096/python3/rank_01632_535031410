class Solution:
    def longestObstacleCourseAtEachPosition(self, obstacles: List[int]) -> List[int]:
        if not obstacles:
            return []
        num_obtacles = [1]
        sorted_subsequence = [obstacles[0]]
        for i in range(1, len(obstacles)):
            if obstacles[i] >= sorted_subsequence[-1]:
                sorted_subsequence.append(obstacles[i])
                num_obtacles.append(len(sorted_subsequence))
            else:
                idx = bisect_right(sorted_subsequence, obstacles[i])
                # print(obstacles[i], idx, sorted_subsequence)
                sorted_subsequence[idx] = obstacles[i]
                num_obtacles.append(idx + 1)
        return num_obtacles