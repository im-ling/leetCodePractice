class Solution:
    def longestObstacleCourseAtEachPosition(self, obstacles: List[int]) -> List[int]:
        arr = [0]
        n = len(obstacles)
        result = [1] * n
        for i, num in enumerate(obstacles):
            j = bisect.bisect_right(arr, num)
            result[i] = j
            if j == len(arr):
                arr.append(num)
            else:
                arr[j] = num
        return result