class Solution:
    def longestObstacleCourseAtEachPosition(self, obstacles: List[int]) -> List[int]:
        inc = [obstacles[0]]
        ans = [1]*len(obstacles)
        for i in range(1, len(obstacles)):
            if obstacles[i] < inc[-1]:
                idx = bisect.bisect_right(inc, obstacles[i])
                inc[idx] = obstacles[i]
                ans[i] = idx + 1
            else:
                inc.append(obstacles[i])
                ans[i] = len(inc)                
        return ans