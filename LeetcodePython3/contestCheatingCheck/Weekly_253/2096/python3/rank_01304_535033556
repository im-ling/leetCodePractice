class Solution:
    def longestObstacleCourseAtEachPosition(self, obstacles: List[int]) -> List[int]:
        n = len(obstacles)
        ans = []
        stack = []
        for i, v in enumerate(obstacles):
            if not stack or stack[-1] <= v:
                stack.append(v)
                ans.append(len(stack))
            else:
                idx = bisect.bisect(stack, v)
                stack[idx] = v
                ans.append(idx+1)
            
        
        # for i in range(1, n):
        #     for j in range(i):
        #         if obstacles[i] >= obstacles[j]:
        #             dp[i] = max(dp[i], dp[j] + 1)
        return ans