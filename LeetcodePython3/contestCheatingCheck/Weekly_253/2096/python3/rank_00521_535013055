class Solution:
    def longestObstacleCourseAtEachPosition(self, obstacles: List[int]) -> List[int]:
        n = len(obstacles)
        res = [1 for i in range(n)]
        cur = [obstacles[0]]
        for i in range(1, n):
            if obstacles[i] >= cur[-1]:
                cur.append(obstacles[i])
                res[i] = len(cur)
            else:
                index = bisect.bisect_right(cur, obstacles[i])
                cur[index] = obstacles[i]
                res[i] = index + 1
        return res
            
        